{
  "manifest_version": 3,

  "name": "Bookmark Sorter",
  "version": "2.0",
  "description": "A chrome extension that keeps bookmarks sorted.",
  "author": "0xf0f.dev@gmail.com",

  "action": {
    "default_popup": "./source/html/options.html"
  },

  "background": {
    "service_worker": "./build/background.js",
    "type": "module"
  },

  "options_ui": {
    "page": "./source/html/options.html"
  },
  
  "permissions": [
    "bookmarks",
    "storage"
  ]
}
