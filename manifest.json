{
  "name": "Bookmark Sorter",
  "version": "1.0",
  "description": "Sorts bookmarks on demand and as they're created.",
  
  "background": {
    "page": "./source/html/background.html",
      
    "persistent": false
  },

  "browser_action": {
    "default_popup": "./source/html/popup.html"
  },

  "options_ui": {
    "page": "./source/html/options.html"
  },
  
  "permissions": [
    "bookmarks",
    "storage",
    "declarativeContent"
  ],

  "manifest_version": 2
}
